{
  "name": "@refactortrack/requisition-service",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist coverage",
    "audit": "npm audit",
    "prepare": "npm run build && npm run audit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-validator": "^7.0.0",
    "winston": "^3.10.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.0.0",
    "redis": "^7.0.0",
    "@elastic/elasticsearch": "^8.0.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.7.0",
    "circuit-breaker-ts": "^1.0.0",
    "@refactortrack/errors": "^1.0.0",
    "@refactortrack/shared": "^1.0.0",
    "swagger-ui-express": "^5.0.0",
    "bcrypt": "^5.1.1",
    "prom-client": "^14.2.0",
    "@opentelemetry/api": "^1.4.0",
    "routing-controllers": "^0.10.0",
    "routing-controllers-openapi": "^4.0.0",
    "typeorm": "^0.3.17",
    "typedi": "^0.10.0",
    "class-validator": "^0.14.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "nodemon": "^2.0.22",
    "eslint": "^8.38.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.1",
    "supertest": "^6.3.3",
    "redis-mock": "^0.56.3",
    "nock": "^13.3.0",
    "typeorm-mock-unit-testing": "^1.0.0",
    "@jest/globals": "^29.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  }
