# Application Environment
# Required: true
# Values: development, production, staging
NODE_ENV=development

# Application Title
# Required: true
# Description: Application title used in browser and UI
VITE_APP_TITLE=RefactorTrack

# API Configuration
# Required: true
# Description: Base URL for backend API services
# Format: Valid URL with API version
VITE_API_URL=http://localhost:3000/api/v1

# API Performance Settings
# Required: false
# Description: API request timeout, retry attempts, and cache duration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_CACHE_DURATION=300000

# Auth0 Authentication Configuration
# Required: true
# Description: Auth0 authentication service settings
VITE_AUTH_DOMAIN=your-domain.auth0.com
VITE_AUTH_CLIENT_ID=your-client-id
VITE_AUTH_AUDIENCE=your-audience

# File Upload Configuration
# Required: false
# Description: File upload constraints and allowed types
# Note: MAX_FILE_SIZE is in bytes (default: 5MB)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx

# Security Headers Configuration
# Required: false
# Description: Security-related settings for API and application
VITE_SECURE_COOKIE=true
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Feature Flags
# Required: false
# Description: Toggle features in different environments
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# Monitoring and Logging
# Required: false
# Description: Configuration for application monitoring
VITE_LOG_LEVEL=info
VITE_SENTRY_DSN=your-sentry-dsn
VITE_PERFORMANCE_MONITORING=true

# Region and Localization
# Required: false
# Description: Default region and language settings
VITE_DEFAULT_REGION=us-east-1
VITE_DEFAULT_LANGUAGE=en-US
VITE_DEFAULT_TIMEZONE=UTC

# Cache Configuration
# Required: false
# Description: Browser cache and storage settings
VITE_CACHE_VERSION=1.0.0
VITE_LOCAL_STORAGE_PREFIX=refactortrack_
VITE_SESSION_TIMEOUT=3600000